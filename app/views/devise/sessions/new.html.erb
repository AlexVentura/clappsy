<!-- http://bootsnipp.com/snippets/featured/responsive-login-with-social-buttons -->

<div class="container">
	<div class="row">
		<div class="omb_login">
			<h3 class="omb_authTitle">Inicia sesión con</a></h3>
			<div class="row omb_row-sm-offset-3 omb_socialButtons">
				<div class="col-xs-12 col-md-6 col-lg-6">
					<%- if devise_mapping.omniauthable? %>
						<%- resource_class.omniauth_providers.each do |provider| %>
							<%= link_to "#{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'btn btn-lg btn-block omb_btn-facebook' %><br />
						<% end -%>
					<% end -%>
				</div>
			</div>
			<div class="row omb_row-sm-offset-3 omb_loginOr">
				<div class="col-xs-12 col-sm-6">
					<hr class="omb_hrOr">
					<span class="omb_spanOr">o</span>
				</div>
			</div>

			<div class="row omb_row-sm-offset-3">
				<div class="col-xs-12 col-sm-6">
					<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'omb_loginForm', autocomplete: 'off' }) do |f| %>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-user"></i></span>
							<%= f.email_field :email, autofocus: true, class: 'form-control', name: 'username', placeholder: 'correo' %>
						</div>
						<span class="help-block"></span>

						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-lock"></i></span>
							<%= f.password_field :password, autocomplete: "off", class: 'form-control', name: 'password', placeholder: 'contraseña' %>
						</div>
						<span class="help-block">Password error</span>

						<% if devise_mapping.rememberable? -%>
							<div class="row omb_row-sm-offset-3" style="margin-left: 0px;">
								<%= f.check_box :remember_me %>
								<%= f.label :remember_me, 'Recordarme' %>
							</div>
						<% end -%>

						<div class="actions">
							<%= f.submit "Iniciar", class: 'btn btn-lg btn-info btn-block' %>
						</div>
					<% end %>

					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
	</div>
</div>
